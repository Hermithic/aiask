#!/bin/bash
# Post-installation script for aiask

set -e

# Make binary executable
chmod +x /usr/local/bin/aiask

echo ""
echo "╔══════════════════════════════════════════════════════════════╗"
echo "║  AIask has been installed successfully!                       ║"
echo "║                                                               ║"
echo "║  To get started, run:                                        ║"
echo "║    aiask config                                              ║"
echo "║                                                               ║"
echo "║  Then try:                                                   ║"
echo "║    aiask \"list all files in current directory\"              ║"
echo "╚══════════════════════════════════════════════════════════════╝"
echo ""

exit 0

